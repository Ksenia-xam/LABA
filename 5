#include <iostream>;
using namespace std;
int Sign(float X) {
	int i = 0;
	if (X < 0) {
		i = -1;
	}
	if (X == 0.0) {
		i = 0;
	}
	if (X > 0) {
		i = 1;
	}
	return i;
}
int main() {
	setlocale(0, "rus");
	cout << "Введите вещественное число A: ";
	float A;
	float B;
	while (!(cin >> A)) {
		cin.clear();
		cin.ignore(10000, '\n');
		cout << "Ошибка! Введите корректное вещественное число A. " << endl;
	}
	cout << "Введите вещественное число B: ";
	while (!(cin >> B)){
		cin.clear();
		cin.ignore(10000, '\n');
		cout << "Ошибка! Введите корректное вещественное число B. " << endl;
	}
	cout << "Сумма двух функций от А и В: " << endl;
	cout << Sign(A) + Sign(B);
	return 0;
}
