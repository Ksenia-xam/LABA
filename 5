#include <iostream>;
using namespace std;
void Reverse(int x) {
	if (x== 0) {
		return;
	}
	cout << x % 10 << endl;
	Reverse(x / 10);
}
int main() {
	setlocale(0, "rus");
	int N;
	cout << "Введите натуральное число N: " << endl;
	while (!(cin >> N) || N <= 0) {
		cin.clear();
		cin.ignore(10000,'\n');
		cout << "Введено некорректное число. "<< endl;
	}
	cout << "Цифры по одной в обратном порядке" << endl;
	Reverse(N);
	return 0;
}
